<h3><a class="btn btn-secondary" href="/project/addOrEdit"><i class="fa fa-plus"></i>Create Post</a>Put Your Problem!</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Posts</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td><a href="/project/taskPage/{{this.id}}">{{this.title}}</a></td>
            <td>{{this.text}}</td>
            <td>{{this.subject}}</td>
            <td>
                <a href="/project/{{this.id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/project/delete/{{this.id}}" onclick="return confirm('Are you sure you want to delete this?')"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>